<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stap10.Views.LoginPage"
             Title="LoginPage">

    <Grid RowDefinitions="0.3*,0.7*">
        <Image Aspect="AspectFill" Source="forest.webp"/>
        <Grid>
            <Grid.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Offset="0" Color="Transparent"></GradientStop>
                    <GradientStop Offset="1" Color="#030005"></GradientStop>
                </LinearGradientBrush>
            </Grid.Background>
        </Grid>
        <Grid ColumnDefinitions="*,*">
            <Image Aspect="AspectFit"
                   HeightRequest="120"
                   Source="applogo.png" />
        </Grid>
        <Grid Grid.Row="1">
            <RoundRectangle
                Margin="-5,-30,-5,-2"
                CornerRadius="30,30,0,0"
                Fill="#0D0118" />
            <VerticalStackLayout Margin="30,0,30,0">
                <Label Text="Welkom Fellow"
                       FontSize="Medium"
                       FontAttributes="Bold"
                       TextColor="White" />
                <Label Text="Login om verder te gaan"
                       TextColor="#A3A3A4" />
                <Grid Margin="0,30,0,0" ColumnDefinitions=".2*,.8*">
                    <RoundRectangle
                        BackgroundColor="#0D0118"
                        CornerRadius="10"
                        HeightRequest="48"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="48" />
                    <Image HorizontalOptions="Center">
                        <Image.Source>
                            <FontImageSource
                                   FontFamily="AwesomeSolid"
                                   Glyph="&#xf0e0;"
                                   Size="43"
                                   Color="#4F3F9b" />
                        </Image.Source>
                    </Image>
                    <Entry Grid.Column="1"
                           Placeholder="EMAIL"
                           Text="fellow@stap10.nl"
                           VerticalOptions="Center"
                           TextColor="White"
                           PlaceholderColor="White"
                           BackgroundColor="#1a052e"/>
                </Grid>
                <Grid Margin="0,30,0,0" ColumnDefinitions=".2*,.8*">
                    <RoundRectangle
                         BackgroundColor="#0D0118"
                         CornerRadius="10"
                         HeightRequest="48"
                         HorizontalOptions="Center"
                         VerticalOptions="Center"
                         WidthRequest="48" />   
                    <Image HorizontalOptions="Center">
                        <Image.Source>
                            <FontImageSource
                                FontFamily="AwesomeSolid"
                                Glyph="&#xf084;"
                                Size="43"
                                Color="#4F3F9b" />
                        </Image.Source>
                    </Image>
                    <Entry Grid.Column="1"
                        Placeholder="PASSWORD"
                        IsPassword="True"
                        Text="Nietmijnwachtwoord"
                        VerticalOptions="Center"
                        TextColor="White"
                        PlaceholderColor="White"
                        BackgroundColor="#1a052e"/> 
                </Grid>
                <Button
                    Margin="0,20,0,0"
                    BackgroundColor="#4F3F9B"
                    HeightRequest="60"
                    Text="Login"
                    TextColor="White" />
                <Label
                    Margin="0,20,0,0"
                    HorizontalOptions="Center"
                    Text="Wachtwoord vergeten?"
                    TextColor="Blue"
                    TextDecorations="Underline" />
                <Button 
                    Margin="0,30,0,0"
                    BackgroundColor="#FBF6FD"
                    HeightRequest="60"
                    Text="Account aanmaken"
                    TextColor="#4F3F9B" />
            </VerticalStackLayout>
        </Grid>
        
    </Grid>
          
</ContentPage>