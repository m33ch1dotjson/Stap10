<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stap10.MainPage">

    <Grid BackgroundColor="#0D0118" RowDefinitions=".05*,.1*,.45*,.05*,.05*,.3*">
        <Label
        FontSize="16"
        HorizontalOptions="Center"
        Text="Stap10"
        TextColor="White"
        VerticalOptions="Center" />

        <Grid Grid.Row="1" Margin="25,10,25,10">
            <RoundRectangle Grid.Row="1"
                        CornerRadius="25"
                        Fill="#311B45"
                        HeightRequest="45" />
            <SearchBar CancelButtonColor="White"
                   Placeholder="Zoeken op naam"
                   PlaceholderColor="#AC9DB9"
                   TextColor="White"
                   VerticalOptions="Center" />
        </Grid>

        <CarouselView 
            IndicatorView="indicatorView"
            Grid.Row="2" 
            ItemsSource="{Binding Horoscopes}"
            PeekAreaInsets="35">
            
            <CarouselView.ItemsLayout>
                <LinearItemsLayout
                ItemSpacing="0"
                    Orientation="Horizontal"
                    SnapPointsAlignment="Center"
                    SnapPointsType="MandatorySingle" />
            </CarouselView.ItemsLayout>
            
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Border 
                            Grid.RowSpan="3"
                            BackgroundColor="#311B45"
                            HeightRequest="300"
                            Stroke="#6E557C"
                            StrokeShape="RoundRectangle 30,30,30,30"
                            StrokeThickness="2"
                            WidthRequest="300">
                            <Grid RowDefinitions=".2*,.6*,.2*">
                                <Image
                                    Grid.RowSpan="3"
                                    Aspect="AspectFill" 
                                    Source="{Binding Image}" />

                                <VerticalStackLayout Grid.Row="2" Margin="20,0,0,0">
                                    <Label Text="Vandaag"
                                   TextColor="White" />
                                    <Label FontSize="Large"
                                   Text="{Binding ZodiacSign}"
                                   TextColor="White" />
                                </VerticalStackLayout>

                            </Grid>
                            <Border.Shadow>
                                <Shadow
                                    Brush="#C283FD"
                                    Opacity=".7"
                                    Radius="30"
                                    Offset="0,0" />
                            </Border.Shadow>
                        </Border>

                    </Grid>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>

        <IndicatorView
            x:Name="indicatorView"
            Grid.Row="3"
            HorizontalOptions="Center"
            IndicatorColor="#616161"
            IndicatorSize="8"
            SelectedIndicatorColor="White"
            VerticalOptions="Center" />

        <Grid Grid.Row="5"
              Margin="15,0,15,0"
              HeightRequest="75"
              VerticalOptions="End">
            <Border BackgroundColor="#311B45"
                    Stroke="#6E557C"
                    StrokeShape="RoundRectangle 30,30,30,30"
                    StrokeThickness="2">
                <Grid ColumnDefinitions="*,*,*,*"
                      RowDefinitions="*,*" 
                      RowSpacing="3">
                    <Label 
                           Grid.Row="1"
                           FontSize="10"
                           HorizontalOptions="Center"
                           Text="Home"
                           TextColor="White" />
                     <Label 
                         Grid.Column="1"
                         Grid.Row="1"
                           FontSize="10"
                           HorizontalOptions="Center"
                           Text="Search"
                           TextColor="White" />     
                    <Label 
                        Grid.Column="2"
                        Grid.Row="1"
                           FontSize="10"
                           HorizontalOptions="Center"
                           Text="Library"
                           TextColor="White" />
                    <Label 
                        Grid.Column="3"
                        Grid.Row="1"
                           FontSize="10"
                           HorizontalOptions="Center"
                           Text="Profile"
                           TextColor="White" />
                    <Label 
                        FontFamily="Icons"
                           FontSize="20"
                           HorizontalOptions="Center"
                           Text="&#xE80D;"
                           TextColor="White" 
                        VerticalOptions="End"/>
                </Grid>
                      
            </Border>
        </Grid>
    </Grid>

</ContentPage>
