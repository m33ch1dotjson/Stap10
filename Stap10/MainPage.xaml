<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stap10.MainPage"
             x:Name="ThisPage">

    <Grid BackgroundColor="#0D0118" RowDefinitions=".05*,.1*,.45*,.05*,.05*,.3*">

                <Label
        FontSize="16"
        HorizontalOptions="Center"
        Text="Stap10"
        TextColor="White"
        VerticalOptions="Center" />

                <Grid Grid.Row="1" Margin="25,10,25,10">
                    <RoundRectangle Grid.Row="1"
                        CornerRadius="25"
                        Fill="#311B45"
                        HeightRequest="45" />
                    <SearchBar CancelButtonColor="White"
                   Placeholder="Zoeken op naam"
                   PlaceholderColor="#AC9DB9"
                   TextColor="White"
                   VerticalOptions="Center" />
                </Grid>

                <CarouselView 
            IndicatorView="indicatorView"
            Grid.Row="2" 
            ItemsSource="{Binding Horoscopes}"
            PeekAreaInsets="35">

                    <CarouselView.ItemsLayout>
                        <LinearItemsLayout
                ItemSpacing="0"
                    Orientation="Horizontal"
                    SnapPointsAlignment="Center"
                    SnapPointsType="MandatorySingle" />
                    </CarouselView.ItemsLayout>

                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnCardTapped"
                                                  CommandParameter="{Binding .}"/>
                                </Grid.GestureRecognizers>
                                <Border 
                            Grid.RowSpan="3"
                            BackgroundColor="#311B45"
                            HeightRequest="300"
                            Stroke="#6E557C"
                            StrokeShape="RoundRectangle 30,30,30,30"
                            StrokeThickness="2"
                            WidthRequest="300">
                                    <Grid RowDefinitions=".2*,.6*,.2*">
                                        <Image
                                    Grid.RowSpan="3"
                                    Aspect="AspectFill" 
                                    Source="{Binding Image}" />

                                        <VerticalStackLayout Grid.Row="2" Margin="20,0,0,0">
                                            <Label Text="Vandaag"
                                   TextColor="White" />
                                            <Label FontSize="Large"
                                   Text="{Binding ZodiacSignNL}"
                                   TextColor="White" />
                                        </VerticalStackLayout>

                                    </Grid>
                                    <Border.Shadow>
                                        <Shadow
                                    Brush="#C283FD"
                                    Opacity=".7"
                                    Radius="30"
                                    Offset="0,0" />
                                    </Border.Shadow>
                                </Border>

                            </Grid>
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>

                <IndicatorView
            x:Name="indicatorView"
            Grid.Row="3"
            HorizontalOptions="Center"
            IndicatorColor="#616161"
            IndicatorSize="8"
            SelectedIndicatorColor="White"
            VerticalOptions="Center" />

                <Label Grid.Row="4"
               Margin="25,10,25,10"
               FontSize="16"
               Text="Dagelijkse wijsheid"
               TextColor="White"
               VerticalOptions="Center" />

                <CollectionView Grid.Row="5" ItemsSource="{Binding Horoscopes}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="25" Orientation="Horizontal" />
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid HeightRequest="200" WidthRequest="200">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnCardTappedQuote"
                                                  CommandParameter="{Binding .}"/>
                        </Grid.GestureRecognizers>
                        <Border
                            HeightRequest="200"
                            HorizontalOptions="Center"
                            Stroke="#6E557C"
                            StrokeShape="RoundRectangle 20,20,20,20"
                            StrokeThickness="2"
                            WidthRequest="200">
                                    <Image Aspect="AspectFill" Source="{Binding Image}" />
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>


                <Grid Grid.Row="5"
              Margin="15,0,15,0"
              HeightRequest="75"
              VerticalOptions="End">
            <Border BackgroundColor="#311B45"
                    Stroke="#6E557C"
                    StrokeShape="RoundRectangle 30,30,30,30"
                    StrokeThickness="2">
                <Grid ColumnDefinitions="*,*,*,*"
                      RowDefinitions="*,*" 
                      RowSpacing="3">
                    <Label 
                           Grid.Row="1"
                           FontSize="10"
                           HorizontalOptions="Center"
                           Text="Home"
                           TextColor="White" />
                     <Label 
                         Grid.Column="1"
                         Grid.Row="1"
                           FontSize="10"
                           HorizontalOptions="Center"
                           Text="Meetings"
                           TextColor="White" />     
                    <Label 
                        Grid.Column="2"
                        Grid.Row="1"
                           FontSize="10"
                           HorizontalOptions="Center"
                           Text="Fellows"
                           TextColor="White" />
                    <Label 
                        Grid.Column="3"
                        Grid.Row="1"
                           FontSize="10"
                           HorizontalOptions="Center"
                           Text="Profile"
                           TextColor="White" />
                    <Label 
                        FontFamily="AwesomeSolid"
                           FontSize="20"
                           HorizontalOptions="Center"
                           Text="&#xf015;"
                           TextColor="White" 
                        VerticalOptions="End"/>
                    <Label 
                        Grid.Column="1"
                        FontFamily="AwesomeSolid"
                           FontSize="20"
                           HorizontalOptions="Center"
                           Text="&#xf3c5;"
                           TextColor="White" 
                        VerticalOptions="End"/>
                    <Label 
                        Grid.Column="2"
                        FontFamily="AwesomeSolid"
                           FontSize="20"
                           HorizontalOptions="Center"
                           Text="&#xf01c;"
                           TextColor="White" 
                        VerticalOptions="End"/>
                    <Label 
                        Grid.Column="3"
                        FontFamily="AwesomeSolid"
                           FontSize="20"
                           HorizontalOptions="Center"
                           Text="&#xf007;"
                           TextColor="White" 
                        VerticalOptions="End"/>
                </Grid>
                      
            </Border>
        </Grid>
    </Grid>

</ContentPage>
